<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <%- include('partials/head') %> 
   <style>
    .bg-img {
        background-image: url("commerce.jpg");
        min-height: 100vh;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: relative;
    }
    .login-form {
        width: 340px;
        margin: 0 auto;
        padding-top: 110px;
        font-size: 15px;
       
    }
    .login-form form {
        margin-bottom: 15px;
        background: #fff;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
        padding: 30px;
    }
    .login-form h2 {
        margin: 0 0 15px;
    }
    .form-control, .btn {
        min-height: 38px;
        border-radius: 2px;
    }
    .btn {        
        font-size: 15px;
        font-weight: bold;
    }</style>
</head>
<body  >
    <div class="bg-img">
        <div class="login-form">
        <form >
            <h2 class="text-center">Log in</h2>       
            <div class="form-group">
               
                <input type="text" class="form-control" placeholder="Username" name="email" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>
            <div class="clearfix">
                <label class="float-left form-check-label"> <a href="/signup">Signup</a></label>
                <a href="/forget_pass" style="float: right;">Forgot Password?</a>
            </div>        
        </form>
        
    </div>
    <script>
        const form=document.querySelector('form');
        
 
        form.addEventListener('submit',async (e)=>{
        e.preventDefault();
        const email=form.email.value;
        const password=form.password.value;
       console.log(email);
   
        try{
           const res= fetch("/login",{
                method:'POST',
                body:JSON.stringify({email,password}),
                headers:{'Content-Type':'application/json'}
            }).then((res)=>{return res.json()}).then((result=>{alert(result.msg); location.replace('/')}));
          const data=await res.json();
          console.log(data);
        }
        catch(err){
           console.log(err)
        }
        });
     
     </script>
</body>
</html>