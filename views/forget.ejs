<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="assets/css/bootstrap.css" rel="stylesheet" />
    <title>  </title>
    
    <style>
        * {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
}
.bg-img {
            background-image: url("commerce.jpg");
            min-height: 100vh;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            position: relative;
}

body {
    background: #e4e4e4;
}

.form-container {
    display: flex;
    height: 98vh;
    width: 100%;
    justify-content: center;
    align-items: center;
}

.form-container .form-wrap {
    background: #fff;
    width: 20%;
    padding: 15px 20px;
}

.form-container .form-wrap h2 {
    text-align: center;
    margin: 0px 0px 20px;
    font-size: 19px;
}

.form-container .form-wrap .form-box {
    margin: 0px 0px 15px;
}

.form-container .form-wrap .form-box input[type="text"]{
    padding: 5px 8px;
    border-radius: 3px;
    border: 1px solid #353535;
    width: 100%;
}

.form-container .form-wrap .form-submit {
    display: flex;
    justify-content: center;
}


.form-container .form-wrap .form-submit input[type="submit"] {
    padding: 4px 10px;
    border: none;
    border-radius: 2px;
    background: #353535;
    color: #fff;
    font-weight: 800;
    cursor: pointer;
    font-size: 16px;
}
    </style>

</head>	
<body>
    <div class="bg-img">
        <div class="form-container">
            <form action="#" method="POST" class="form-wrap">
                <h2>Forgot Password</h2>
                <div class="form-box">
                    <input type="text" placeholder="Enter Email" name="email"/>
                </div>
                <div class="form-submit">
                    <button type="submit" class="btn btn-primary ">send request</button>
                </div>
            </form>
        </div>
        </div>


        <script>
            const form=document.querySelector('form');
            
         
            form.addEventListener('submit',async (e)=>{
            e.preventDefault();
           
            const email=form.email.value;
           
       
            try{
               const res= fetch("/forget_pass",{
                    method:'POST',
                    body:JSON.stringify({email}),
                    headers:{'Content-Type':'application/json'}
                }).then((res)=>{return res.json()}).then((result=>{alert(result.msg);location.replace("/login");}));
              const data=await res.json();
              console.log(data);
            }
            catch(err){
               console.log(err)
            }
            });
         
         </script>
</body>
</html>	